.panel.panel-default.mg-top-24
  .panel-heading
    .panel-title
      %h1= t('devise.user.edit')
  .panel-body
    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = devise_error_messages!
      = f.input :email, autofocus: true
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      %i= (t('devise.user.leave_blank'))
      = f.input :password, autocomplete: "off"
      - if @minimum_password_length
        %em
          = @minimum_password_length
          = t('devise.user.characters_minimum')
      = f.input :password_confirmation, autocomplete: "off"
      %i= t('devise.user.current_password')
      = f.input :current_password, autocomplete: "off"
      = f.button :submit
  .panel-footer
    %h3= t('devise.user.cancel_my_account')
    %p
      = t('devise.user.unhappy')
      ?

      \#{button_to "Удалить мою учетную запись", registration_path(resource_name), data: { confirm: "Удалить насовсем?" }, method: :delete}
    = link_to t('devise.user.back'), :back
