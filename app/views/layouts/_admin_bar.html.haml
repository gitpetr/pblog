- if admin_signed_in?
  .btn-group.navbar-btn.navbar-right
    = button_tag class: 'dropdown-toggle btn btn-default', 'data-toggle': 'dropdown' do
      = current_admin.email
      %span.caret
    %ul.dropdown-menu
      %li= link_to 'Выйти', destroy_admin_session_path, method: :delete, class: 'btn btn-rimary navbar-btn navbar-right'
- else
  = link_to 'Вход', new_admin_session_path, class: 'btn btn-default navbar-btn navbar-right'
  = link_to 'Регистрация', new_admin_registration_path, class: 'btn btn-info navbar-btn navbar-right'